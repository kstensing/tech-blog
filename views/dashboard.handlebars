<section>
  <h2>Create New Blog Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-body">Body</label>
      <input id="post-body" name="post-body" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{#if posts.length}}
<section>
  <h2>Your Blog Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
    <article class="post">
      <div class="title">
    <a href="/post/{{post.id}}">{{post.title}}</a>
      </div>
      <div class="body">
       {{post.body}}
      </div>
      <div class="">
        posted by {{post.user.username}} on
        {{post.created_at}}
        
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
    <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit your post</a>
  </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>