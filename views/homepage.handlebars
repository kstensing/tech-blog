<div>You are on the homepage</div>
<ol class="">
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
       {{post.title}}
      </div>
      <div class="body">
       {{post.body}}
      </div>
      <div class="">
        posted by {{post.user.username}} on
        {{post.created_at}}
        
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>